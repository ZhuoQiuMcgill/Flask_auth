# Flask Auth Service API - Environment Variables
# Copy this file to .env and adjust values for your environment

# Database Configuration
DATABASE_PATH=auth.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production

# Flask Server Configuration
FLASK_ENV=development  # Options: development, testing, production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# API Server Configuration (for verify_login.py script)
API_HOST=localhost
API_PORT=5000

# Uncomment below to set a specific path for database
# DATABASE_PATH=/absolute/path/to/auth.db